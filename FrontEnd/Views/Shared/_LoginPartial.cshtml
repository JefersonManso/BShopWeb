<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <span class="nav-link">Olá, @User.Identity.Name</span>
        </li>
        <li class="nav-item">
            <form method="post" asp-controller="Home" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <form method="post" asp-controller="Home" asp-action="Login">
                <button type="submit" class="nav-link btn btn-link">Login</button>
            </form>
        </li>
    }
</ul>
